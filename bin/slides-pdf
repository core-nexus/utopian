#!/usr/bin/env bash
set -euo pipefail
. "$(dirname "$0")/runner"

slides_pdf () {
  if command -v marp >/dev/null 2>&1; then
    shell marp --pdf --allow-local-files --output slides/talk.pdf slides/talk.md || true
  else
    echo "marp not found; skipping slides PDF. Use CI or install @marp-team/marp-cli."
  fi
}

run slides_pdf

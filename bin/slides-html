#!/usr/bin/env bash
set -euo pipefail
. "$(dirname "$0")/runner"

slides_html () {
  if command -v marp >/dev/null 2>&1; then
    shell marp --html --allow-local-files --output slides/talk.html slides/talk.md || true
  else
    echo "marp not found; skipping slides HTML. Use CI or install @marp-team/marp-cli."
  fi
}

run slides_html

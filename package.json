{
  "name": "utopian",
  "version": "0.1.11",
  "description": "",
  "keywords": [
    "langgraph",
    "ai",
    "typescript"
  ],
  "homepage": "https://github.com/core-nexus/utopian#readme",
  "bugs": {
    "url": "https://github.com/core-nexus/utopian/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/core-nexus/utopian.git"
  },
  "license": "Apache-2.0",
  "author": "Harlan T Wood",
  "type": "module",
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "utopian": "bin/utopian.js"
  },
  "files": [
    "dist",
    "bin",
    "mod.ts",
    "README.md",
    "AGENTS.md"
  ],
  "scripts": {
    "build": "tsup",
    "check-version": "pnpm view utopian version",
    "dev": "tsx src/cli.ts",
    "lint": "eslint \"src/**/*.{js,ts}\" --fix",
    "lint:check": "eslint \"src/**/*.{js,ts}\"",
    "fmt": "prettier -w .",
    "fmt:check": "prettier --check .",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "publish:dry": "pnpm publish --dry-run",
    "republish": "pnpm version patch && pnpm publish",
    "republish:major": "pnpm version major && pnpm publish",
    "republish:minor": "pnpm version minor && pnpm publish",
    "slides": "marp slides/*.md -o dist --allow-local-files",
    "sort": "sort-package-json",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.15",
    "ai": "^5.0.15",
    "commander": "^14.0.0",
    "tsx": "^4.7.0",
    "yaml": "^2.8.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@marp-team/marp-cli": "^4.2.3",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "sort-package-json": "^3.4.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
